[diff]
	tool = vimdiff
[alias]
  st = status
  ci = commit -v
  co = checkout
  di = diff
  amend = commit --amend
  aa = add --all
  fa = fetch --all
  pom = push origin master
  br = branch
  ignored = !git ls-files -v | grep "^[[:lower:]]"
  prune-local = !git branch --merged | tr -d '*' | grep -v dev | xargs -n1 git branch -d
[push]
	default = current
[pull]
	default = current
[color]
	ui = true
[help]
	autocorrect = 1
[core]
	pager = less -r
	editor = vim
[pull]
	rebase = true
